<%-layout("/layouts/boilerplate")%>
<%-include("../includes/filterbar.ejs")%>

<% if (typeof allListings !== 'undefined') { %>

  <% if(searchquery) { %>
    <h3 class="mt-3">All results for "<%=searchquery%>"</h3>
  <% } else {%>
    <h3 class="mt-3">All Listings</h3>
  <% }%>
  (Showing <%=allListings.length%> Listings)
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1 mt-3">
    <% for (let listing of allListings) { %>
      <a href="/listings/<%=listing._id%>" class="listing-link">
        <div class="listing-card card col">
          <img src="<%=listing.image.url%>" class="card-img-top" alt="listing-image" style="height: 20rem;">
          <div class="card-img-overlay"></div>
          <div class="card-body"></div>
          <div class="card-body">
            <b><h5 class="card-title"><%=listing.title%></h5></b>
            <p class="card-text">
              &#8377; <%= listing.price.toLocaleString("en-IN")%> / night <i class="tax-info">&nbsp;+18% GST</i>
              <br>
              <% if (listing.averageRating && listing.averageRating > 0) { %>
                <%=listing.averageRating%><i class="ms-1 fa-solid fa-star"></i>
              <% } else { %>
                No reviews for this listing
              <% } %>
            </p>
          </div>
        </div>
      </a>
    <% } %>
  </div>

<% } else if (typeof taggedListings !== 'undefined') { %>
  <% if(taggedListings.length === 0) { %>
    <h3 class="mt-3">No Listings tagged with "<%=filterTag[tag].tag%>"</h3>
  <% } else { %>
    <h3 class="mt-3">All Listings Tagged with "<%=filterTag[tag].tag%>"</h3>
    (Showing <%=taggedListings.length%> Listings)
  <% } %>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1 mt-3">
    <% for (let listing of taggedListings) { %>
      <a href="/listings/<%=listing._id%>" class="listing-link">
        <div class="listing-card card col">
          <img src="<%=listing.image.url%>" class="card-img-top" alt="listing-image" style="height: 20rem;">
          <div class="card-img-overlay"></div>
          <div class="card-body"></div>
          <div class="card-body">
            <b><h5 class="card-title"><%=listing.title%></h5></b>
            <p class="card-text">
              &#8377; <%= listing.price.toLocaleString("en-IN")%> / night <i class="tax-info">&nbsp;+18% GST</i>
              <br>
              <% if (listing.averageRating && listing.averageRating > 0) { %>
                <%=listing.averageRating%><i class="ms-1 fa-solid fa-star"></i>
              <% } else { %>
                No reviews for this listing
              <% } %>
            </p>
          </div>
        </div>
      </a>
    <% } %>
  </div>
<% } %>
